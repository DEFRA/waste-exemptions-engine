<%= render("waste_exemptions_engine/shared/back", back_path: back_contact_name_forms_path(@contact_name_form.token)) %>
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_for @contact_name_form do |f| %>
      <%= render partial: "waste_exemptions_engine/shared/error_summary", locals: { f: f } %>

      <h1 class="govuk-heading-l"><%= t(".heading") %></h1>

      <p class="govuk-hint"><%= t(".description") %></p>

      <%= f.govuk_text_field :contact_first_name,
          width: "one-half",
          label: { text: t(".contact_first_name_label") } %>

      <%= f.govuk_text_field :contact_last_name,
          width: "one-half",
          label: { text: t(".contact_last_name_label") } %>

      <%= f.govuk_submit %>
    <% end %>
  </div>
</div>

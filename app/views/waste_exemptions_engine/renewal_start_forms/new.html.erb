<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_for(@renewal_start_form) do |f| %>
      <%= render partial: "waste_exemptions_engine/shared/error_summary", locals: { f: f } %>

      <h1 class="govuk-heading-l"><%= t(".heading") %></h1>

      <p class="govuk-body"><%= t(".description") %></p>


      <div class="govuk-body">
        <%= t(".guidance",
            guidance_link: link_to( t(".guidance_link_label"), "https://www.gov.uk/guidance/register-your-waste-exemptions-environmental-permits", rel: "external", target: "_blank")
            ).html_safe %>
      </div>

      <%= render("waste_exemptions_engine/shared/data_overview/company_info", form: @renewal_start_form) %>
      <%= render("waste_exemptions_engine/shared/data_overview/registration_info", form: @renewal_start_form) %>

      <%= f.govuk_collection_radio_buttons :temp_renew_without_changes,
        [
          OpenStruct.new(
            id: true,
            name: t(".options.yes")
          ),
          OpenStruct.new(
            id: false,
            name: t(".options.no")
          )
        ],
        :id,
        :name,
        legend: {
          text: t(".heading"),
          hidden: true
        },
        small: true %>

      <%= f.govuk_submit t(".next_button") %>
    <% end %>
  </div>
</div>

<%= form_for @payment_summary_form do |f| %>
  <%= render partial: "waste_exemptions_engine/shared/error_summary", locals: { f: f } %>

  <h1 class="govuk-heading-l"><%= t(".heading") %></h1>

  <dl class="govuk-summary-list govuk-!-margin-bottom-9">
    <div class="govuk-summary-list__row">
      <dt class="govuk-summary-list__key">
        <%= t(".charges.compliance_charge") %>
      </dt>
      <dd class="govuk-summary-list__actions">
        <%= @payment_summary_form.total_compliance_charge %>
      </dd>
    </div>
    <div class="govuk-summary-list__row">
      <dt class="govuk-summary-list__key">
        <%= t(".charges.registration_charge") %>
      </dt>
      <dd class="govuk-summary-list__actions">
        <%= @payment_summary_form.registration_charge %>
      </dd>
    </div>
    <div class="govuk-summary-list__row">
      <dt class="govuk-summary-list__key">
        <%= t(".charges.total_charge") %>
      </dt>
      <dd class="govuk-summary-list__actions">
        <%= @payment_summary_form.total_charge %>
      </dd>
    </div>
  </dl>

   <%= f.govuk_collection_radio_buttons :payment_type,
          [
            OpenStruct.new(
              id: "card",
              name: t(".payment_options.card")
            ),
            OpenStruct.new(
              id: "bank_transfer",
              name: t(".payment_options.bank")
            )
          ],
          :id,
          :name,
          legend: { text: t(".payment_type_legend"), tag: "h2", size: "m" } %>

  <%= f.govuk_submit t(".payment_submit_button_label") %>
<% end %>

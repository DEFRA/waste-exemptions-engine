<%= render("waste_exemptions_engine/shared/back", back_path: back_check_contact_address_forms_path(@check_contact_address_form.token)) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_for @check_contact_address_form do |f| %>
      <%= render partial: "waste_exemptions_engine/shared/error_summary", locals: { f: f } %>

      <%=
        f.govuk_collection_radio_buttons :temp_reuse_operator_address,
        [
          OpenStruct.new(
            id: true,
            name: t(".options.yes")
          ),
          OpenStruct.new(
            id: false,
            name: t(".options.no")
          )
        ],
        :id,
        :name,
        inline: true,
        legend: { text: t(".heading"), size: "l", tag: "h1" },
        hint: { text: displayable_address(@check_contact_address_form.operator_address).join("<br>").html_safe } %>
      <%= f.govuk_submit %>
    <% end %>
  </div>
</div>

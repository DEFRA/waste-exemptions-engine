<%= render("waste_exemptions_engine/shared/back", token: @capture_reference_form.token) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_for @capture_reference_form do |f| %>
      <%= render partial: "waste_exemptions_engine/shared/error_summary", locals: { f: f } %>

      <h1 class="govuk-heading-l"><%= t(".heading") %></h1>

      <%= f.govuk_text_field :reference,
          label: nil,
          hint: { text: t(".reference_hint") },
          width: 20 %>

      <details class="govuk-details" data-module="govuk-details">
        <summary class="govuk-details__summary">
          <span class="govuk-details__summary-text"><%= t(".detail_subheading") %></span>
        </summary>
        <div class="govuk-details__text">
          <%= t(".detail", link: link_to( t(".detail_link"), t(".detail_url"), rel: "external", target: "_blank")).html_safe %>
        </div>
      </details>

      <%= f.govuk_submit %>
    <% end %>
  </div>
</div>

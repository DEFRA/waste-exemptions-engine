<%= render("waste_exemptions_engine/shared/back", back_path: back_contact_postcode_forms_path(@contact_postcode_form.token)) %>

<div class="text">
  <%= form_for(@contact_postcode_form) do |f| %>
    <%= render("waste_exemptions_engine/shared/errors", object: @contact_postcode_form) %>

    <h1 class="heading-large"><%= t(".heading") %></h1>

    <div class="form-group <%= "form-group-error" if @contact_postcode_form.errors[:temp_contact_postcode].any? %>">
      <fieldset id="temp_contact_postcode">
        <legend class="visuallyhidden">
          <%= t(".heading") %>
        </legend>

        <% if @contact_postcode_form.errors[:temp_contact_postcode].any? %>
          <span class="error-message"><%= @contact_postcode_form.errors[:temp_contact_postcode].join(", ") %></span>
        <% end %>

        <%= f.label :temp_contact_postcode, class: "form-label" do %>
          <%= t(".postcode_label") %>
          <span class='form-hint'><%= t(".postcode_hint") %></span>
        <% end %>

        <%= f.text_field :temp_contact_postcode, value: @contact_postcode_form.temp_contact_postcode, class: "form-control govuk-input--width-10" %>
      </fieldset>
    </div>

    <%= f.hidden_field :token, value: @contact_postcode_form.token %>
    <div class="form-group">
      <%= f.submit t(".next_button"), class: "button" %>
    </div>

    <% if @contact_postcode_form.errors.added?(:temp_contact_postcode, :no_results) %>
      <div class="form-group">
        <%= link_to(t(".manual_address_link"), skip_to_manual_address_contact_postcode_forms_path(@contact_postcode_form.token)) %>
      </div>
    <% end %>
  <% end %>

  <%= render("waste_exemptions_engine/shared/os_terms_footer") %>
</div>

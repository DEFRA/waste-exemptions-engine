<%= render("waste_exemptions_engine/shared/back", back_path: back_applicant_phone_forms_path(@applicant_phone_form.token)) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_for @applicant_phone_form do |f| %>
      <%= render partial: "waste_exemptions_engine/shared/error_summary", locals: { f: f } %>

      <h1 class="govuk-heading-l"><%= t(".heading") %></h1>

      <%= f.govuk_phone_field :applicant_phone,
          width: "one-half",
          label: { text: t(".applicant_phone_label") },
          hint: { text: t(".applicant_phone_hint")} %>

      <%= f.govuk_submit %>
    <% end %>
  </div>
</div>

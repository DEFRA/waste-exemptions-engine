<%= render("waste_exemptions_engine/shared/back", back_path: back_contact_phone_forms_path(@contact_phone_form.token)) %>

<div class="text">
  <%= form_for(@contact_phone_form) do |f| %>
    <%= render("waste_exemptions_engine/shared/errors", object: @contact_phone_form) %>

    <h1 class="heading-large"><%= t(".heading") %></h1>

    <div class="form-group <%= "form-group-error" if @contact_phone_form.errors[:contact_phone_number].any? %>">
      <fieldset id="contact_phone_number">
        <% if @contact_phone_form.errors[:contact_phone_number].any? %>
          <span class="error-message"><%= @contact_phone_form.errors[:contact_phone_number].join(", ") %></span>
        <% end %>

        <%= f.label :contact_phone_number, class: "form-label" do %>
          <%= t(".contact_phone_number_label") %>
          <span class='form-hint'><%= t(".contact_phone_number_hint") %></span>
        <% end %>

        <%= f.telephone_field :contact_phone_number, value: @contact_phone_form.contact_phone_number, class: "form-control govuk-input--width-10" %>
      </fieldset>
    </div>

    <%= f.hidden_field :token, value: @contact_phone_form.token %>
    <div class="form-group">
      <%= f.submit t(".next_button"), class: "button" %>
    </div>
  <% end %>
</div>

<%= render("waste_exemptions_engine/shared/back", back_path: back_contact_phone_forms_path(@contact_phone_form.token)) %>

<div class="text">
  <%= form_for(@contact_phone_form) do |f| %>
    <%= render("waste_exemptions_engine/shared/errors", object: @contact_phone_form) %>

    <h1 class="heading-large"><%= t(".heading") %></h1>

    <% if @contact_phone_form.errors[:phone_number].any? %>
    <div class="form-group form-group-error">
    <% else %>
    <div class="form-group">
    <% end %>
      <fieldset id="phone_number">
        <% if @contact_phone_form.errors[:phone_number].any? %>
        <span class="error-message"><%= @contact_phone_form.errors[:phone_number].join(", ") %></span>
        <% end %>

        <%= f.label :phone_number, class: "form-label" do %>
          <%= t(".phone_number_label") %>
          <span class='form-hint'><%= t(".phone_number_hint") %></span>
        <% end %>
        <%= f.telephone_field :phone_number, value: @contact_phone_form.phone_number, class: "form-control" %>
      </fieldset>
    </div>

    <%= f.hidden_field :token, value: @contact_phone_form.token %>
    <div class="form-group">
      <%= f.submit t(".next_button"), class: "button" %>
    </div>
  <% end %>
</div>

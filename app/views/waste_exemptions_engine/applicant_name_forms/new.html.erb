<%= render("waste_exemptions_engine/shared/back", back_path: back_applicant_name_forms_path(@applicant_name_form.token)) %>

<div class="text">
  <%= form_for(@applicant_name_form) do |f| %>
    <%= render("waste_exemptions_engine/shared/errors", object: @applicant_name_form) %>

    <h1 class="heading-large"><%= t(".heading") %></h1>

    <p><%= t(".description") %></p>

    <% if @applicant_name_form.errors[:first_name].any? %>
    <div class="form-group form-group-error">
    <% else %>
    <div class="form-group">
    <% end %>
      <fieldset id="first_name">
        <% if @applicant_name_form.errors[:first_name].any? %>
        <span class="error-message"><%= @applicant_name_form.errors[:first_name].join(", ") %></span>
        <% end %>

        <%= f.label :first_name, t(".first_name_label"), class: "form-label" %>
        <%= f.text_field :first_name, value: @applicant_name_form.first_name, class: "form-control govuk-input--width-2" %>
      </fieldset>
    </div>

    <% if @applicant_name_form.errors[:last_name].any? %>
    <div class="form-group form-group-error">
    <% else %>
    <div class="form-group">
    <% end %>
      <fieldset id="last_name">
        <% if @applicant_name_form.errors[:last_name].any? %>
        <span class="error-message"><%= @applicant_name_form.errors[:last_name].join(", ") %></span>
        <% end %>

        <%= f.label :last_name, t(".last_name_label"), class: "form-label" %>
        <%= f.text_field :last_name, value: @applicant_name_form.last_name, class: "form-control govuk-input--width-2" %>
      </fieldset>
    </div>

    <%= f.hidden_field :token, value: @applicant_name_form.token %>
    <div class="form-group">
      <%= f.submit t(".next_button"), class: "button" %>
    </div>
  <% end %>
</div>

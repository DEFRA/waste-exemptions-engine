<div class="govuk-form-group <%= "govuk-form-group--error" if form.errors[address].any? %>">
  <fieldset id="<%= address %>" class="govuk-fieldset">
    <legend class="govuk-visually-hidden"><%= t(".address_label") %></legend>

    <% if form.errors[address].any? %>
      <span class="govuk-error-message" id="<%= field_prefix %>-address-field-error"%><%= form.errors[address].join(", ") %></span>
    <% end %>

    <%= f.label :uprn, t(".address_label"), class: "govuk-label" %>
    <%= f.select(:uprn,
                 options_for_select(form.temp_addresses.map { |a| [a["address"], a["uprn"]] }, form.existing_address&.uprn),
                 { include_blank: t(".address_blank_option", count: form.temp_addresses.length ) },
                 { class: "govuk-select" }) %>
  </fieldset>
</div>

<div class="govuk-summary-list__row govuk-summary-list__row--no-border">
  <dt class="govuk-summary-list__key govuk-!-padding-bottom-0">
    <%= row[:title] %>
  </dt>
  <dd id="<%= html_id_for("registration", row[:title]) %>" class="govuk-summary-list__value govuk-!-padding-bottom-0">
    <%= row[:value] %>
  </dd>
  <dd class="govuk-summary-list__actions govuk-!-padding-bottom-0">
    <% if row[:change_url].present? %>
      <%= link_to(row[:change_url]) do %>
        <%= t(".change_link")%>
        <span class="govuk-visually-hidden">
          <%= row[:change_link_suffix] %>
        </span>
      <% end %>
    <% end %>
  </dd>
</div>
<h2 class="govuk-heading-m">
  <%= t(".subheading") %>
</h2>
<span class="govuk-visually-hidden">
  <%= t(".table_summary") %>
</span>
<dl class="govuk-summary-list govuk-!-margin-bottom-9">
<% form.company_rows.each do |row| %>
  <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
      <%= row[:title] %>
    </dt>
    <% html_id = html_id_for("operator", row[:title]) %>
    <% unless form.errors[row[:title]].any? %>
      <dt class="govuk-error-message" id="renewal-start-form-<%= html_id %>-field-error">
        <%= form.errors[html_id].join(", ") %>
      </dt>
    <% end %>
    <dd id="<%= html_id %>" class="govuk-summary-list__value">
      <%= row[:value] %>
    </dd>
    <dd class="govuk-summary-list__actions">
      <% if !form&.transient_registration&.renewal? && row[:change_url].present? %>
        <!-- NEW REGISTRATIONS -->
        <%= link_to(row[:change_url]) do %>
          <%= row[:value].present? ? t(".change_link") : t(".add_link")%>
          <span class="govuk-visually-hidden">
            <%= row[:change_link_suffix] %>
          </span>
        <% end %>
      <% elsif form&.transient_registration&.renewal? && row[:renewal_change_url].present? %>
        <!-- RENEWALS -->
        <%= link_to(row[:renewal_change_url]) do %>
          <%= row[:value].present? ? t(".change_link") : t(".add_link")%>
          <span class="govuk-visually-hidden">
            <%= row[:change_link_suffix] %>
          </span>
        <% end %>
      <% end %>
    </dd>
  </div>
<% end %>
</dl>

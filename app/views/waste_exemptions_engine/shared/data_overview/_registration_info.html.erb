<h2 class="govuk-heading-m">
  <%= t(".subheading") %>
</h2>

<span class="govuk-visually-hidden">
  <%= t(".table_summary") %>
</span>

<dl class="govuk-summary-list govuk-!-margin-bottom-9">
<% form.registration_rows.each do |row| %>
  <% row_css = row[:merged_with] ? "govuk-summary-list__row--no-border" : "" %>
  <% column_css = row[:merged_with] ? "govuk-!-padding-bottom-0" : "" %>
  <div class="govuk-summary-list__row <%= row_css %>">
    <dt class="govuk-summary-list__key <%= column_css %>">
      <%= row[:title] %>
    </dt>
    <dd id="<%= html_id_for("registration", row[:title]) %>" class="govuk-summary-list__value <%= column_css %>">
      <%= row[:value] %>
    </dd>
    <dd class="govuk-summary-list__actions <%= column_css %>">
      <% if !form&.transient_registration&.renewal? && row[:change_url].present? %>
        <%= link_to(row[:change_url]) do %>
          <%= t(".change_link")%>
          <span class="govuk-visually-hidden">
            <%= row[:change_link_suffix] %>
          </span>
        <% end %>
      <% end %>
    </dd>
  </div>
<% end %>
</dl>

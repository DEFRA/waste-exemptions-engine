<%= render("waste_exemptions_engine/shared/back", token: @capture_email_form.token) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_for @capture_email_form do |f| %>
      <%= render partial: "waste_exemptions_engine/shared/error_summary", locals: { f: f } %>

      <h1 class="govuk-heading-l"><%= t(".heading") %></h1>

      <%= f.hidden_field :reference, value: @capture_email_form&.transient_registration&.reference %>

      <%= f.govuk_text_field :contact_email,
          label: { text: t(".contact_email_label") },
          hint: { text: t(".contact_email_hint") },
          width: 20 %>

      <%= f.govuk_submit %>
    <% end %>
  </div>
</div>

<%= render("waste_exemptions_engine/shared/back", back_path: back_is_a_farmer_forms_path(@is_a_farmer_form.token)) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_for(@is_a_farmer_form) do |f| %>
      <%= render partial: "waste_exemptions_engine/shared/error_summary", locals: { f: f } %>

      <h1 class="govuk-heading-l"><%= t(".heading") %></h1>

      <%= f.govuk_collection_radio_buttons :is_a_farmer,
        [
          OpenStruct.new(
            id: true,
            name: t(".options.yes")
          ),
          OpenStruct.new(
            id: false,
            name: t(".options.no")
          )
        ],
        :id,
        :name,
        legend: {
          text: t(".heading"),
          hidden: true
        },
        inline: true %>

      <%= f.govuk_submit %>
    <% end %>
  </div>
</div>

<%= render("waste_exemptions_engine/shared/back", back_path: back_operator_address_lookup_forms_path(@operator_address_lookup_form.token)) %>

<div class="text">
  <%= form_for(@operator_address_lookup_form) do |f| %>
    <%= render("waste_exemptions_engine/shared/errors", object: @operator_address_lookup_form) %>

    <h1 class="heading-large"><%= t(".heading.#{@operator_address_lookup_form.business_type}") %></h1>

    <div class="form-group">
      <label class="form-label"><%= t(".postcode_label") %></label>
      <span class="postcode"><%= @operator_address_lookup_form.postcode %></span>
      <%= link_to(t(".postcode_change_link"), back_operator_address_lookup_forms_path(@operator_address_lookup_form.token)) %>
    </div>

    <%= fields_for :operator_address do |f| %>
      <%= render("waste_exemptions_engine/shared/select_address", form: @operator_address_lookup_form, address: :operator_address, f: f) %>
    <% end %>
    <div class="form-group">
      <%= link_to(t(".manual_address_link"), skip_to_manual_address_operator_address_lookup_forms_path(@operator_address_lookup_form.token)) %>
    </div>

    <%= f.hidden_field :token, value: @operator_address_lookup_form.token %>
    <div class="form-group">
      <%= f.submit t(".next_button"), class: "button" %>
    </div>
  <% end %>

  <%= render("waste_exemptions_engine/shared/os_terms_footer") %>
</div>

<%= render("waste_exemptions_engine/shared/back", token: @contact_position_form.token) %>
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_for @contact_position_form do |f| %>
      <%= render partial: "waste_exemptions_engine/shared/error_summary", locals: { f: f } %>

      <h1 class="govuk-heading-l"><%= t(".heading") %></h1>

      <%= f.govuk_text_field :contact_position,
          width: "one-half",
          label: { text: t(".position_label") },
          hint: { text: t(".position_hint") },
          autocomplete: "organization-title" %>

      <%= f.govuk_submit %>
    <% end %>
  </div>
</div>

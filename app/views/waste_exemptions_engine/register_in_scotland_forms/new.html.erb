<%= render("waste_exemptions_engine/shared/back", back_path: back_register_in_scotland_forms_path(@register_in_scotland_form.token)) %>

<div class="text">
  <%= form_for(@register_in_scotland_form) do |f| %>
    <%= render("waste_exemptions_engine/shared/errors", object: @register_in_scotland_form) %>

    <h1 class="heading-large"><%= t(".heading") %></h1>

    <div class="form-group">
      <p><%= t(".paragraph_1") %></p>
      <p><%= t(".paragraph_2") %> <a href="https://www.sepa.org.uk/regulations/waste/activities-exempt-from-waste-management-licensing"><%= t(".service_link") %></a>.</p>
      <p><%= t(".paragraph_3") %></p>
    </div>

    <%= f.hidden_field :token, value: @register_in_scotland_form.token %>
  <% end %>
</div>

<%= render("waste_exemptions_engine/shared/back", back_path: back_registration_number_forms_path(@registration_number_form.token)) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_for @registration_number_form do |f| %>
      <%= render partial: "waste_exemptions_engine/shared/error_summary", locals: { f: f } %>

      <h1 class="govuk-heading-l"><%= t(".heading.#{@registration_number_form.business_type}") %></h1>

      <%= f.govuk_text_field :company_no,
          label: { text: t(".company_no_label") },
          hint: { text: t(".company_no_hint") },
          width: 10 %>

      <p class="govuk-body"><%= t(".explanation.#{@registration_number_form.business_type}") %></p>

      <%= f.govuk_submit %>
    <% end %>
  </div>
</div>

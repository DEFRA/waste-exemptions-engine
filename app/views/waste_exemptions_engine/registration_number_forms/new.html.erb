<% content_for :title, t(".heading.#{@registration_number_form.business_type}").try(:html_safe) %>

<%= render("waste_exemptions_engine/shared/back", token: @registration_number_form.token) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_for @registration_number_form do |f| %>
      <%= render partial: "waste_exemptions_engine/shared/error_summary", locals: { f: f } %>

      <h1 class="govuk-heading-l"><%= t(".heading.#{@registration_number_form.business_type}") %></h1>

      <%= f.govuk_text_field :temp_company_no,
          label: { text: t(".company_no_label") },
          hint: { text: t(".company_no_hint") },
          width: 10 %>

      <details class="govuk-details" data-module="govuk-details">
        <summary class="govuk-details__summary">
          <span class="govuk-details__summary-text"><%= t(".detail_subheading") %></span>
        </summary>
        <div class="govuk-details__text">
          <%= t(".detail.#{@registration_number_form.business_type}") %>
        </div>
      </details>

      <p class="govuk-body"><%= t(".explanation.#{@registration_number_form.business_type}") %></p>

      <%= f.govuk_submit %>
    <% end %>
  </div>
</div>

<%= form_for @start_form do |f| %>
  <%= render partial: "waste_exemptions_engine/shared/error_summary", locals: { f: f } %>
  <%= render("waste_exemptions_engine/shared/error", error: flash[:error], details: flash[:error_details]) if flash[:error].present? %>

  <%= f.govuk_collection_radio_buttons :start_option,
      [
        OpenStruct.new(id: :new, name: t(".options.new")),
        OpenStruct.new(id: :reregister, name: t(".options.reregister")),
        OpenStruct.new(id: :deregister, name: t(".options.deregister")),
        OpenStruct.new(id: :edit, name: t(".options.edit"))
      ],
      :id,
      :name,
      legend: { text: t(".heading"), size: "l", tag: "h1" } %>

  <%= f.govuk_submit %>
<% end %>

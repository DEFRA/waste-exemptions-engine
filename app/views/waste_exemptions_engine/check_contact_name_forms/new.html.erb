<%= render("waste_exemptions_engine/shared/back", token: @check_contact_name_form.token) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_for @check_contact_name_form do |f| %>
      <%= render partial: "waste_exemptions_engine/shared/error_summary", locals: { f: f } %>

      <h1 class="govuk-heading-l"><%= t(".heading") %></h1>
      <p class="govuk-hint"><%= t(".description") %></p>

      <br/>
      <%=
        f.govuk_collection_radio_buttons :temp_reuse_applicant_name,
        [
          OpenStruct.new(
            id: true,
            name: t(".options.yes")
          ),
          OpenStruct.new(
            id: false,
            name: t(".options.no")
          )
        ],
        :id,
        :name,
        inline: true,
        legend: { text: t(".heading"), hidden: true },
        hint: { text: "#{@check_contact_name_form.applicant_first_name} #{@check_contact_name_form.applicant_last_name}" } %>

      <%= f.govuk_submit %>
    <% end %>
  </div>
</div>
